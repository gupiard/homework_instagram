<h1>Edit Photo</h1>
<img src="<%= @photo.source %>" width="80">

<form class="form-horizontal" role="form" action="/update_photo/<%= @photo.id %>">
  <div class="form-group">
    <label for="photo_caption" class="col-sm-2 control-label">Caption:</label>
    <div class="col-sm-10">
      <input id="photo_caption" type="text" name="the_caption" value="<%= @photo.caption %>">
    </div>
  </div>
  <div class="form-group">
    <label for="photo_image_url" class="col-sm-2 control-label">Image URL:</label>
    <div class="col-sm-10">
      <input id="photo_image_url" type="text" name="the_source" value="<%= @photo.source %>">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-primary" value="Confirm Edit">
    </div>
  </div>
</form>
