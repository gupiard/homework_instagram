<h1>List of Photos</h1>

<p><a class="btn btn-primary" href="/new_photo_form">Add A New photo</a></p>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Caption</th>
    <th colspan="3">Actions</th>
  </tr>
<% @list_of_photos.each do |photo| %>
  <tr>
    <td>
      <img src="<%= photo.source %>" width="80">
    </td>
    <td>
      <%= photo.caption %>
    </td>
    <td>
      <a href="/photo_details/<%= photo.id %>">Show</a>
    </td>
    <td>
      <a href="/edit_photo_form/<%= photo.id %>">Edit</a>
    </td>
    <td>
      <a href="/delete_photo/<%= photo.id %>">Delete</a>
    </td>
  </tr>
<% end %>
</table>
