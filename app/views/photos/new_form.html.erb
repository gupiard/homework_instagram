<h1>Add A New Photo</h1>

<form class="form-horizontal" role="form" action="/create_photo">
  <div class="form-group">
    <label for="photo_caption" class="col-sm-2 control-label">Caption:</label>
    <div class="col-sm-10">
      <input id="photo_caption" type="text" name="the_caption">
    </div>
  </div>
  <div class="form-group">
    <label for="photo_image_url" class="col-sm-2 control-label">Image URL:</label>
    <div class="col-sm-10">
      <input id="photo_image_url" type="text" name="the_source">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-primary" value="Create photo">
    </div>
  </div>
</form>
